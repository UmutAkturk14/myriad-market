<script>

$(document).ready(function () {
  const lgBreakpoint = 1024; // Default "lg" breakpoint in Tailwind CSS

  // Toggle edit mode for offers
  $("#edit-offers-button").click(function () {
    $(".offer-btn").toggleClass("hidden");
  });

  // Toggle edit form for posts
  $(".edit-btn").click(function (e) {
    e.preventDefault();
    const formId = this.id.replace(/-/g, "_");
    $(`#${formId}`).slideToggle();
  });

  // Handle hover effect for posts

  // Function to apply hover effect
  function applyHoverEffect() {
    $(".post").hover(
      function () {
        // Mouse over
        $(this).children(":eq(1)").fadeIn(150);
      },
      function () {
        // Mouse out
        $(this).children(":eq(1)").fadeOut(150);
      }
    );
  }

  // Check screen size and apply hover effect only if screen width is larger than "lg" breakpoint
  if ($(window).width() >= lgBreakpoint) {
    applyHoverEffect();
  }

  // Listen for window resize and reapply the hover effect as needed
  $(window).resize(function () {
    if ($(window).width() >= lgBreakpoint) {
      applyHoverEffect();
    } else {
      // Remove the hover effect if the screen size is smaller than "lg" breakpoint
      $(".post").off("mouseenter mouseleave");
    }
  });

  // Handle click event for activate buttons
  $(".activate-button").click(handleActivateButtonClick);
});

function handleActivateButtonClick(e) {
  e.preventDefault();
  const $button = $(this);
  const $form = $button.closest("form");
  const $postDiv = $button.closest(".post");
  const buttonText = $button.find("span").text();
  const $activePassiveButton = $postDiv.find(".active-passive");
  const cardID = $postDiv.attr("id")
  console.log(cardID);

  $.ajax({
    url: $form.attr("action"),
    type: "POST",
    headers: {
      "X-CSRF-Token": $('meta[name="csrf-token"]').attr("content"),
    },
    success: function (response) {
      // Handle the response and update styling if necessary
      console.log("Offer status changed:", response);

      // Toggle button text and styles
      const newButtonText = buttonText === "Deactivate" ? "Activate" : "Deactivate";
      $button.find("span").text(newButtonText);
      $activePassiveButton.text(buttonText === "Deactivate" ? "Passive" : "Active");

      // Toggle button and active/passive button colors
      $button.children(":eq(0)").toggleClass("bg-green-400 bg-yellow-400");
      $activePassiveButton.toggleClass("text-green-700 text-red-700");

      // Toggle card background
      $postDiv.toggleClass("bg-blue-200");

      // Toggle active offer card
      $(`.${cardID}`).slideToggle(1000);

    },
    error: function (error) {
      console.error("Error:", error);
    },
  });
}


</script>
