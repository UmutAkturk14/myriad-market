            <div class="flex-1 overflow-scroll bg-white rounded-lg shadow-xl mt-4 p-8">
                <h4 class="text-xl text-gray-900 font-bold">Activity log</h4>
                <div class="relative px-4">
                  <div class="absolute h-full border border-dashed border-opacity-20 border-secondary"></div>

                  <% Feed.where(user: @user).each do |feed| %>
                    <!-- start::Timeline item -->
                    <div class="flex items-center w-full my-6 -ml-1.5">
                        <div class="w-1/12 z-10">
                            <div class="w-3.5 h-3.5 bg-blue-600 rounded-full"></div>
                        </div>
                        <div class="w-11/12">
                            <p class="text-sm"><%= feed.content %></p>
                            <p class="text-xs text-gray-500"><%= time_ago(feed.created_at) %></p>
                        </div>
                    </div>
                    <!-- end::Timeline item -->

                  <% end %>

                </div>
            </div>

            <% if @user == current_user %>
              <div class="flex-1 overflow-scroll bg-white rounded-lg shadow-xl mt-4 p-8">
                <h4 class="text-xl text-gray-900 font-bold">Your Dashboard</h4>
                <% @ownership.each do |s| %>
                  <% paths = {
                    "Vehicle": :vehicle_path,
                    "Service": :service_path,
                    "Property": :property_path} %>


                  <% if Offer.find_by(offerable: s).present? %>
                    <div class="flex justify-between items-center hover:shadow hover:drop-shadow-md p-1 px-3 rounded-xl post <%= Offer.find_by(offerable: s).visible == true ? "" : "bg-blue-200" %>" id="<%= s.class.to_s.downcase %>-<%= s.id%>">
                      <%= link_to send(paths[s.class.to_s.to_sym], s) do  %>
                        <div class="flex items-center w-full my-2 -ml-1.5">
                          <%= cl_image_tag s.photos.first.key, class: "w-16 h-16 object-cover rounded-md mr-4" %>
                          <div class="offer-text">
                            <% if Offer.find_by(offerable: s).visible == true %>
                              <p class="text-green-700 font-bold text-xs -mt-3 active-passive">Active</p>
                            <% else %>
                              <p class="text-red-700 font-bold text-xs -mt-3 active-passive">Passive</p>
                            <% end %>

                            <p class="text-sm text-blue-600 font-bold grow line-clamp-1">
                              <%= Offer.find_by(offerable: s).title %></p>
                            <p class="text-xs text-gray-500"><%= time_ago(s.created_at) %></p>
                          </div>
                        </div>

                      <% end %>
                      <div class="buttons lg:hidden items-center flex flex-col">

                        <% if Offer.find_by(offerable: s).present? %>
                          <% offerable_type = s.class.to_s.downcase %>
                          <% offer_path = send("activate_#{offerable_type}_path", s) %>
                          <% button_text = Offer.find_by(offerable: s).visible ? 'Deactivate' : 'Activate' %>

                          <%= form_tag offer_path, method: :post do %>
                            <button class="group relative h-6 w-20 overflow-hidden rounded-lg bg-white text-xs shadow mb-1 activate-button" offer-path="<%= offer_path%>">

                              <% if button_text == 'Deactivate' %>
                                <div class="absolute inset-0 w-3 bg-green-400 transition-all duration-[250ms] ease-out group-hover:w-full"></div>

                              <% else %>
                                <div class="absolute inset-0 w-3 bg-yellow-400 transition-all duration-[250ms] ease-out group-hover:w-full"></div>
                              <% end %>
                              <span class="relative text-black group-hover:text-white ml-3"><%= button_text %></span>
                            </button>
                          <% end %>
                        <% end %>
                        <%# Remove button %>
                        <% link_path = case s.class.name
                            when "Service" then service_path(s)
                            when "Vehicle" then vehicle_path(s)
                            when "Property" then property_path(s)
                            else "#" # Handle other cases if needed
                            end %>

                          <%= link_to link_path, data: { turbo_method: :delete } do %>
                            <button class="group relative h-6 w-20 overflow-hidden rounded-lg bg-white text-xs shadow mb-1">
                              <div class="absolute inset-0 w-3 bg-red-400 transition-all duration-[250ms] ease-out group-hover:w-full"></div>
                              <span class="relative text-black group-hover:text-white ml-3">Remove</span>
                            </button>
                          <% end %>


                      </div>
                    </div>

                  <% else %>
                    <%# TODO: Postings that haven't been yet turned into offers %>
                    <div class="flex justify-between items-center hover:shadow hover:drop-shadow-md p-1 px-3 rounded-xl post bg-red-100" id="<%= s.class.to_s.downcase %>-<%= s.id%>">
                      <div class="flex items-center w-full my-2 -ml-1.5">
                        <% if s.photos.first.key.present? %>
                          <%= cl_image_tag s.photos.first.key, class: "w-16 h-16 object-cover rounded-md mr-4" %>
                        <% end %>
                        <div class="offer-text">
                          <p class="text-orange-700 font-bold text-xs -mt-3 active-passive">Not yet activated</p>

                          <p class="text-sm text-blue-600 font-bold grow line-clamp-1">
                            <%= s.class.to_s == "Service" ? s.service_type : s.description %></p>
                          <p class="text-xs text-gray-500"><%= time_ago(s.created_at) %></p>
                        </div>
                      </div>
                      <div class="buttons lg:hidden items-center flex flex-col">

                         <button class="group relative h-8 w-20 overflow-hidden rounded-lg bg-white text-xs shadow mb-1 activate-button <%= s.class.to_s.downcase %>-<%= s.id %>">
                          <div class="absolute inset-0 w-3 bg-orange-400 transition-all duration-[250ms] ease-out group-hover:w-full"></div>
                          <span class="relative text-black group-hover:text-white ml-3">Display as an offer</span>
                         </button>

                      </div>
                    </div>
                  <% end %>


              <% end %>

            </div>
          <% end %>
        </div>
        <div class="flex flex-col w-full 2xl:w-2/3">
          <div class="flex-1 bg-white rounded-lg shadow-xl p-8">
            <div class="flex justify-between">
              <h4 class="text-xl text-gray-900 font-bold">About</h4>
              <% if @user == current_user %>
                <%= button_tag(type: "submit", class: "flex justify-end p-2.5 bg-green-500 rounded-xl hover:rounded-3xl hover:bg-green-600 transition-all duration-300 text-white", id: "edit-about-button") do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
              <% end %>
            </div>
            <p class="mt-2 text-gray-700"><%= @user.about %></p>
          </div>
          <div class="flex-1 bg-white rounded-lg shadow-xl mt-4 p-8" id="offers">
            <div class="flex justify-between">
              <h4 class="text-xl text-gray-900 font-bold">Active Offers (<%= @offers.count %>)</h4>
              <% if @user == current_user %>
                <%= button_tag(type: "submit", class: "flex justify-end p-2.5 bg-green-500 rounded-xl hover:rounded-3xl hover:bg-green-600 transition-all duration-300 text-white", id: "edit-offers-button") do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
              <% end %>
            </div>

