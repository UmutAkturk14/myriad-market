                  <% unless @user.attributes[attribute].blank? %>

                  <li class="flex justify-between border-y py-2">
                    <span class="font-bold w-24"><%= attribute.humanize %></span>
                    <% if ["created_at", "updated_at"].include?(attribute) %>
                      <span><%= @user.attributes[attribute].strftime('%d %B %Y') %></span>
                    <% else %>
                    <span class="text-gray-700"><%= @user.attributes[attribute] %></span>
