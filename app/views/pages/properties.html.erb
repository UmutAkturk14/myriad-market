<main id="homepage-grids" class="grid grid-cols-7 gap-2 mt-3 flex justify-center m-auto w-full md:w-11/12 xl:w-10/12">
  <section class="grid grid-cols-1 md:grid-cols-2 md:col-span-7 xl:grid-cols-5 xl:col-span-7 col-span-7 gap-3 content-start w-full">
    <%# Filters %>

    <%# <div class="col-span-4 bg-red-200">
      <p>yo</p>
    </div>
    <hr class="col-span-4"> %>
    <%# Render offers for homepage %>
    <% Offer.where(offerable_type: "Property", visible: true).each do |offer| %>
      <article class="p-6 w-full md:hover:bg-yellow-100 xl:hover:scale-110 md:hover:shadow-sm rounded-xl transition duration-600 flex flex-col content-center">
        <%= offerable_link(offer) %>
      </article>
    <% end %>
  </section>
</main>
