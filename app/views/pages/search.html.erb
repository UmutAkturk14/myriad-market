
<% if @results.present? && @results.size > 0 %>
  <div class="flex justify-center"><p class="font-bold text-2xl text-center mt-4 border-y-2 border-black w-1/4">RESULTS</p></div>
  <main id="homepage-grids" class="grid grid-cols-7 gap-2 mt-3 flex justify-center m-auto w-full md:w-11/12 xl:w-10/12">
    <section class="grid grid-cols-1 md:grid-cols-2 md:col-span-7 xl:grid-cols-5 xl:col-span-7 col-span-7 gap-3 content-start w-full">
      <%# Render results %>
      <% @results.each do |offer| %>
        <article class="p-6 w-full md:hover:bg-yellow-50 xl:hover:scale-110 md:hover:shadow-sm rounded-xl transition duration-600 flex flex-col content-center">
          <%= offerable_link(offer) %>
        </article>
      <% end %>
    </section>
  </main>
<% elsif params[:search].present? && @results.size == 0 %>
  <main class="container mx-auto mt-28 px-5 flex">
    <p class="font-bold text-lg">Sorry, no results match your search. Try again! Till then, here some stuff for you to discover!</p>
  </main>

  <%# TODO: Maybe display some random offers as `discover` %>
  <section id="homepage-grids" class="grid grid-cols-7 gap-2 mt-3 flex justify-center m-auto w-full md:w-11/12 xl:w-10/12">
    <article class="grid grid-cols-1 md:grid-cols-2 md:col-span-7 xl:grid-cols-5 xl:col-span-7 col-span-7 gap-3 content-start w-full">
      <%# Render some offers %>
      <% Offer.all.sample(10).each do |offer| %>
        <article class="p-6 w-full md:hover:bg-yellow-50 xl:hover:scale-110 md:hover:shadow-sm rounded-xl transition duration-600 flex flex-col content-center">
          <%= offerable_link(offer) %>
        </article>
      <% end %>
    </article>
  </section>
<% end %>
