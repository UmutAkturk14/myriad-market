<main class="flex flex-col items-center">
  <%= image_tag asset_path('brand-logo.svg'), class: "h-16 w-16 mt-14" %>
  <h2 class="font-bold text-2xl">Log in</h2>
  <hr class="w-2/3 my-4 lg:w-1/3">

  <div class="mt-6 w-3/4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs space-y-4 flex flex-col items-center mx-12 md:mx-0">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "px-4 py-2 border rounded focus:outline-none focus:border-blue-500", placeholder: "johndoe@email.com" },
                    wrapper_html: { class: "flex justify-between w-full md:w-1/2"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "px-4 py-2 border rounded focus:outline-none focus:border-blue-500", placeholder: "********" },
                    wrapper_html: { class: "flex justify-between w-full md:w-1/2"} %>
        <%= f.input :remember_me, wrapper_html: { class: "block w-1/2" }, input_html: { class: "mr-2 rounded" }, as: :boolean, boolean_style: :inline if devise_mapping.rememberable? %>
        <div class="form-actions mt-6 w-full flex justify-center">
          <%= f.button :submit, "Log in", class: "w-1/2 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-1 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-600 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-md px-5 py-2.5 text-center mr-2" %>
        </div>
      </div>



    <% end %>
    <div class="flex flex-col items-center mx-12 md:mx-0 mb-12">
      <p class="text-ld mt-6 w-full md:w-1/2 flex justify-start mb-4">You don't have an account yet?</p>
      <%= render "devise/shared/links" %>
    </div>
  </div>

</main>

<script>
$(document).ready(function () {

  $(".form-check").addClass("flex items-center");
});

</script>
